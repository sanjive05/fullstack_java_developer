package arrays;

public class CheckArraySortedOrNot {
	
	public static boolean isSorted(int[] arr) {
		
		int increaseCount = 0;
		int decreaseCount = 0;
		for(int i=0;i<arr.length-1;i++) {
			if(arr[i]<arr[i+1]) {
				increaseCount++;
			}
			else {
				decreaseCount++;
			}
		}
		
		System.out.println("Increase Count = "+increaseCount);
		System.out.println("Increase Count = "+decreaseCount);
		return false;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int[] arr = {1,2,4,5,6,8,12,14,16,17,20}; 
		
		System.out.println(isSorted(arr));

	}

}
